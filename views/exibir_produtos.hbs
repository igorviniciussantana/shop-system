<div class="p-5 rounded mt-3">
  <h1>Lista Usuários</h1>
  {{#if lista}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#ID</th>
        <th scope="col">Nome</th>
        <th scope="col">Preço</th>
        <th scope="col">Imagem</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      {{#each produtos}}
      <tr>
        <th scope="row">{{id}}</th>
        <td>{{name}}</td>
        <td>{{price}}</td>
        <td><img src="{{img}}" class="img-thumb"></td>
        <td>
          <div class="row g-1">
            <div class="col-6 col-md-3">
              <form action="/editar_produtos" method="post">
              <input type="hidden" name="id" value="{{id}}">
              <button class="w-100 btn btn-info">Editar</button>
              </form>
            </div>
            <div class="col-6 col-md-3">
                <form action="/delete_produtos" method="post">
                 <input type="hidden" name="id" value="{{id}}">
              <button class="w-100 btn btn-danger">Deletar</button>
              </form>
            </div>
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <div class="card mt-4">
    <div class="card-body">
      Nenhum dado encontrado
    </div>
  </div>
  {{/if}}
</div>